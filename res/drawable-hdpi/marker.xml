<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:id="@+id/marker_background">
		<shape android:shape="rectangle">
			<stroke android:width="2dip" android:color="@color/skope_grey_extra_dark" />
			<solid android:color="@color/skope_grey" />
			<size android:height="35dip" android:width="34dip" />
		</shape>
	</item>
	<item android:id="@+id/marker_thumbnail" android:left="2dip"
		android:top="2dip" android:right="2dip" android:bottom="2dip">
		<shape android:shape="rectangle">
			<solid android:color="@color/skope_grey" />
			<size android:height="30dip" android:width="30dip" />
		</shape>
	</item>
</layer-list>

