<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:id="@+id/detail_view">
	<Gallery xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/gallery"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_box"/>
	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout2">
		<LinearLayout android:orientation="vertical" android:layout_weight="1" android:layout_height="fill_parent" android:layout_marginBottom="12dip" android:id="@+id/linearLayout1" android:layout_width="fill_parent">
			<TextView android:layout_width="fill_parent" android:text="Name" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/username_text"></TextView>
			<ImageView android:layout_marginRight="6dip" android:layout_width="100dip" android:layout_height="100dip" android:src="@drawable/icon" android:id="@+id/icon"></ImageView>
		</LinearLayout>
		<include layout="@layout/map" android:layout_weight="1" android:layout_width="fill_parent" android:layout_height="fill_parent"></include>
	</LinearLayout>

</LinearLayout>