<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:id="@+id/detail_view">
	<Gallery 
	    android:id="@+id/gallery"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/gradient_box"/>
	<LinearLayout android:orientation="vertical" android:padding="7dip" android:layout_width="match_parent" android:layout_height="fill_parent" android:id="@+id/linearLayout1">
		<TextView android:layout_width="fill_parent" android:text="Name" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/username_text"></TextView>
		<LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout2" android:layout_weight="1" android:layout_height="match_parent" android:padding="7dip">
			<ImageView android:layout_marginRight="12dip" android:id="@+id/icon" android:layout_height="100dip" android:layout_width="100dip" android:src="@drawable/icon"></ImageView>
			<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:id="@+id/linearLayout3">
				<TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:text="Age" android:layout_width="wrap_content" android:id="@+id/age_text"></TextView>
			</LinearLayout>
		</LinearLayout>
		<include layout="@layout/map" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1"></include>
	</LinearLayout>

</LinearLayout>