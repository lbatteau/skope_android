<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:id="@+id/listview"
   >
<ProgressBar android:id="@+id/titleProgressBar"
                style="?android:attr/progressBarStyleSmall" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_centerVertical="true" 
                android:layout_toRightOf="@+id/title" 
                android:paddingLeft="3dip"></ProgressBar>
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="horizontal"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content">
       <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/button_label_listview" android:id="@+id/button_listview" android:layout_weight="1"></Button>
       <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/button_label_mapview" android:id="@+id/button_mapview" android:layout_weight="1"></Button>
   </LinearLayout>
<ListView
    android:id="@+id/list"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    />

