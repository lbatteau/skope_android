<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
   <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="0dp">
	    
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="50dip"/>
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:background="@drawable/silver" />
    	<LinearLayout android:id="@+id/user_bar" android:orientation="horizontal" android:background="@drawable/header_gradient" android:padding="10dip" android:layout_height="90dip" android:layout_width="fill_parent" android:layout_weight="0">
            <ImageView android:src="@drawable/icon" style="@style/Thumbnail" android:layout_marginRight="6dip" android:id="@+id/user_icon"></ImageView>
            <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_margin="1dip" android:layout_width="fill_parent">
                <TextView android:id="@+id/user_name" android:textColor="@android:color/white" android:layout_width="fill_parent" android:textSize="20sp" android:layout_height="wrap_content" android:text="Name"></TextView>
                <TextView android:clickable="true" android:id="@+id/user_status" android:background="@drawable/status_selector" android:textColor="@color/skope_grey" android:layout_width="fill_parent" android:singleLine="false" android:textSize="14sp" android:layout_height="wrap_content" android:text="Your status here..." android:lines="2"></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</TabHost>