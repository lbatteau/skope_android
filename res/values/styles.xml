<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashScreen">
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowFrame">@null</item>
    </style>
    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">14dip</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/button_custom</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="FacebookConnect" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">14dip</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/button_fbconnect</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textOn">""</item>
        <item name="android:textOff">""</item>
    </style>
    <style name="Thumbnail">
        <item name="android:background">@drawable/thumbnail_box</item>
        <item name="android:layout_width">54dip</item>
        <item name="android:layout_height">54dip</item>
        <item name="android:padding">2dip</item>                
    </style>
    <style name="ThumbnailSelectable" parent="@style/Thumbnail">
        <item name="android:background">@drawable/thumbnail_box_selectable</item>
    </style>
    	<style name="MapMarker">
   		<item name="android:background">@drawable/marker</item>
   		<item name="android:layout_width">34dip</item>
   		<item name="android:layout_height">34dip</item>
   	</style>
   	<style name="RadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
   		<item name="android:textColor">@color/skope_grey_dark</item>
   	</style>
</resources>